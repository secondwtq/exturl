{
	"manifest_version": 2,
	"name": "URL copier",
	"description": "",
	"version": "0.3",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": [ "tingle.css" ],
			"js": [ "browser-polyfill.js", "tingle.js", "exturl_content.js" ]
		}
	],
	"background": {
		"scripts": [ "browser-polyfill.js", "background.js" ]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "exturl Icon",
		"default_popup": "popup.html"
	},
	"permissions": [ "tabs", "contextMenus", "clipboardWrite" ]
}
